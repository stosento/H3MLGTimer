<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/options_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="sosentoski.mcctimer.activity.OptionsActivity">

    <LinearLayout
            android:id="@+id/gametype_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
            android:id="@+id/gamemode_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/gametype_layout">

    </LinearLayout>

    <LinearLayout
            android:id="@+id/powerup_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/gamemode_layout">

    </LinearLayout>

</RelativeLayout>
